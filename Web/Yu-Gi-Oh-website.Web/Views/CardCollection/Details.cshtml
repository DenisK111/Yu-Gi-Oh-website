@model CardViewModel





<p>
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Atk</th>
                <th scope="col">Def</th>
                <th scope="col">Level</th>
                <th scope="col">Attribute</th>
                <th scope="col">Race</th>

            </tr>
        </thead>
        <tbody>
            <tr>

                <td>@Model.Name</td>
                <td>@Model.Race</td>
                <td>@Model.Atk</td>
                <td>@Model.Def</td>
                <td>@Model.Level</td>
                <td>@Model.CardAttribute</td>
                <td>@Model.Race</td>

            </tr>

        </tbody>
    </table>


</p>

<div class="container-fluid">
    <div class="row g-2 ">

        @foreach (var entry in Model.CardImages)
        {


            <img src="@entry" alt="@entry.Split("/").Last().Replace(".jpg","")" class="img-fluid rounded col-2" />


        }

    </div>
</div>