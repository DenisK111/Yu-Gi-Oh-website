@using Yu_Gi_Oh_website.Web.Models.ProfilePic
@model ProfilePicViewModel

<div class="row text-center p-2">
    <div class="col-3 p-2"></div>
    <div class="col-6 p-2">
<h3>Current Profile Picture:</h3>

<img src="@(Model.ProfilePic ?? "https://media.istockphoto.com/id/1147544807/vector/thumbnail-image-vector-graphic.jpg?s=612x612&w=0&k=20&c=rnCKVbdxqkjlcs3xH87-9gocETqpspHFXu5dIGB4wuM=")" class="mx-auto img-fluid" style="max-width:300px" />

        <form method="post" enctype="multipart/form-data">
    <div class="form-group p-2">
        <label asp-for="NewProfilePic">Choose file to upload:</label>
        <input asp-for="NewProfilePic" class="form-control" />
        <span asp-validation-for="NewProfilePic" class="text-danger"></span>    
        <input type="hidden" asp-for="ProfilePic"/>
    </div>
            <div class="form-group p-2">
                <button type="submit" class="btn btn-success py-2 rounded-0">Upload</button>
            </div>
            
</form>
    </div>
    <div class="col-3 p-2"></div>

</div>
