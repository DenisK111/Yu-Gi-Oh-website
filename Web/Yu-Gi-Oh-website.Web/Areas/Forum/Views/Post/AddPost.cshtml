@model AddPostInputViewModel

<div class="row">
    <div class="col-2"></div>
    <div class="col-md-8 col-md-offset-2">

        <h1 class="text-center">Add New Post</h1>
        
        <form asp-action="AddPost" method="post" class="m-2">

            <div asp-validation-summary="ModelOnly"></div>
                      
            <div class="form-group">
                <label asp-for="PostContent">Content</label>
                <textarea rows="5" class="form-control" asp-for="PostContent"></textarea>
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <input type="hidden" asp-for="Author" />
            </div>

            <div class="form-group ">
                <input type="hidden" asp-for="ThreadId" />
            </div>

            <div class="form-group p-2">
                <button type="submit" class="btn btn-primary">
                    Create
                </button>                
                <button class="btn btn-default" type="button" onclick="location.href='@($"/Forum/Cattegory/{Model.SubCattegoryId}/{Model.SubCattegorySlug}/Thread/{Model.ThreadId}?currentPage=1")';">
                    Cancel
                </button>
            </div>

        </form>
    </div>
    <div class="col-2"></div>
</div>

@section Scripts{
    <script src="~/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/tinymce.js" asp-append-version="true"></script>
}

