@using Yu_Gi_Oh_website.Web.Areas.Administration.Models
@model AddSubCattegoryInputModel

<div class="row">
    <div class="col-2"></div>
    <div class="col-md-8 col-md-offset-2">

        <h1>Add SubCategory</h1>

        <form method="post" class="m-2">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Name">SubCategory Name</label>
                <input class="form-control" asp-for="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">SubCategory Description</label>
                <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>



            <div class="form-group ">
                <input type="hidden" asp-for="Cattegories" value="@Model.Cattegories" />
            </div>

            <div class="form-group py-2">
                <label asp-for="CattegoryId">Cattegory: </label>
                <select name="cattegoryId" asp-for="CattegoryId">
                    
												@foreach (var cattegory in Model.Cattegories)
												{
												<option value="@cattegory.Id">@cattegory.Name</option>
												}

										</select>
										<span asp-validation-for="Cattegories" class="text-danger"></span>

            </div>
            


            <div class="form-group p-2">
                <button type="submit" class="btn btn-primary">
                    Create
                </button>
                
            </div>

        </form>
        <button class="btn btn-default" onclick="location.href='@Url.Action("SubCattegories","SubCattegory")';">
            Cancel
        </button>
    </div>
    <div class="col-2"></div>
</div>
